    <!-- button header -->
    <header class="w3-display-container w3-wide" id="home1">


        <h6>
            <button class="w3-button w3-white w3-padding-large w3-large w3-opacity w3-hover-opacity-off" id ="home" >HOME</button>
            <button class="w3-button w3-white w3-padding-large w3-large w3-opacity w3-hover-opacity-off" id ="agrandir" >AGRANDIR</button>
