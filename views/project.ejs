<script>
   let ebkObj  = new Ebika() ;
   let canvas  = document.getElementById("canvasid");


   document.addEventListener("dblclick",  function(e) {

       e = e || window.event;
       let target = e.target || e.srcElement;
       switch(target.id) {
           case "canvasid":
               const filename    =  "canvas-image.png"
               if (window.navigator.msSaveBlob) {
                   window.navigator.msSaveBlob(canvas.msToBlob(), filename )
               } else {

                   const a = document.createElement("a");
                   a.href   =   canvas.toDataURL( filename ,0,0);
                   document.body.appendChild(a);
                   a.download =  filename;
                   a.click();
                   document.body.removeChild(a);

               }
           break;
       }
   });


    document.addEventListener('click', function(e) {
        e = e || window.event;
        let target = e.target || e.srcElement;
        switch(target.id) {
            case "home":
                window.location.href = "/"
                break;
            case "agrandir":
                ebkObj.fullreenCanvasFromButton(canvas);
                break;
            case "saveimage":

               // const dataURL =  canvas.toDataURL("image/jpeg",0,0);
                const filename    =  "canvas-image.png"
                if (window.navigator.msSaveBlob) {
                    window.navigator.msSaveBlob(canvas.msToBlob(), filename )
                } else {

                    const a = document.createElement("a");
                    a.href   =   canvas.toDataURL();
                    document.body.appendChild(a);
                    a.download =  filename;
                    a.click();
                    document.body.removeChild(a);
                }


                break;
            case "btnvalider" :

               // alert();
                let divForm  = document.getElementById("divForm") ;
                divForm.style.display = "none";
                quizz.iniPlayers({players:[  document.getElementById("fjouer1").value,document.getElementById("fjouer2").value,document.getElementById("fjouer3").value]});
             break;

            case "nextTurn" :
                let nextTurn = document.getElementById("nextTurn") ;
                let tourde  = document.getElementById("tourde") ;
                tourde.innerHTML =   quizz.nextTurn();
               // nextTurn.value =  quizz.nextTurn();
                break;

            default:
            // code block
        }

    }, false);


</script>
